{
  "name": "consent-management-provider",
  "version": "2.1.4",
  "description": "A minimal consent manager aiming for compliance to IAB's Transperancy and Consent Framework (TCF v2) ",
  "main": "dist/app.js",
  "scripts": {
    "open": "browser-refresh express --port 8080",
    "dev": "concurrently \"ts-node -r dotenv/config ./src/app.ts\" \"npm run open\"",
    "watch": "concurrently \"nodemon -e ts -w ./src -x ts-node -r dotenv/config ./src/app.ts\" \"npm run open\"",
    "start": "npm run prod",
    "build": "rm -rf ./dist/* && tsc",
    "prod": "node ./dist/app.js",
    "test": "jest --verbose=true --silent",
    "ci": "start-server-and-test start http://localhost:3000/health test"
  },
  "author": "Alexander Fut√°sz <alexander.futasz@fokus.fraunhofer.de>",
  "license": "UNLICENSED",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "prom-client": "^14.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "4.17.8",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/node": "^18.11.9",
    "@types/uglify-js": "^3.17.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "browser-refresh": "^1.7.3",
    "browser-refresh-client": "^1.1.4",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.2.2",
    "puppeteer": "^19.2.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "wait-for": "^2.1.1",
    "yargs": "^17.6.0"
  }
}
