{
  "name": "consent-management-provider",
  "version": "1.0.0",
  "description": "A minimal consent manager aiming for compliance to IAB's Transperancy and Consent Framework (TCF v2) ",
  "main": "dist/app.js",
  "scripts": {
    "dev": "concurrently \"ts-node -r dotenv/config ./src/app.ts\" \"npm run open\"",
    "watch": "nodemon -e ts,js,template -w ./src -w ./templates -x npm run dev",
    "build": "rm -rf ./dist/* && tsc",
    "prod": "nodemon ./dist/app.js",
    "start": "npm run build && npm run prod",
    "open": "concurrently \"browser-refresh express --port 8080\" \"sleepms 2000 && open http://localhost:8080/\""
  },
  "author": "Alexander Fut√°sz <alexander.futasz@fokus.fraunhofer.de>",
  "license": "UNLICENSED",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "uglify-js": "^3.17.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/uglify-js": "^3.17.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "browser-refresh": "^1.7.3",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "sleep-ms": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "yargs": "^17.6.0"
  }
}
