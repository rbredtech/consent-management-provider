{
  "name": "consent-management-provider",
  "version": "2.2.1",
  "description": "A minimal consent manager aiming for compliance to IAB's Transperancy and Consent Framework (TCF v2) ",
  "main": "dist/app.js",
  "scripts": {
    "open": "browser-refresh express --port 8080",
    "dev": "concurrently \"ts-node -r dotenv/config ./src/app.ts\" \"yarn open\"",
    "watch": "concurrently \"nodemon -e ts -w ./src -i './src/templates/*' -x ts-node -r dotenv/config ./src/app.ts\" \"yarn open\"",
    "start": "yarn prod",
    "build": "rm -rf ./dist/* && gulp",
    "prod": "node ./dist/app.js",
    "test": "jest --verbose=true --silent",
    "ci": "start-server-and-test start http://localhost:3000/health test",
    "lint": "eslint --color",
    "lint:apply": "yarn lint --fix"
  },
  "author": "Andreas Jantschnig <andreas.jantschnig@tv-insight.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "prom-client": "^15.1.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "4.17.21",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/gulp": "^4.0.10",
    "@types/gulp-sourcemaps": "^0.0.38",
    "@types/jest": "^29.2.3",
    "@types/node": "^20",
    "browser-refresh": "^1.7.3",
    "browser-refresh-client": "^1.1.4",
    "concurrently": "^9.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gulp": "^5.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-minify-inline": "^1.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^29.3.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "puppeteer": "23.4.0",
    "start-server-and-test": "^2.0.8",
    "supertest": "^7.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.7.0",
    "wait-for": "^2.1.1",
    "yargs": "^17.6.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
