{
  "name": "consent-management-provider",
  "version": "3.2.0",
  "type": "module",
  "description": "A minimal consent manager aiming for compliance to IAB's Transparency and Consent Framework (TCF v2) ",
  "repository": "https://github.com/rbredtech/consent-management-provider",
  "author": "Andreas Jantschnig <andreas.jantschnig@tv-insight.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rm -rf ./dist/* && gulp",
    "dev": "concurrently \"yarn serve-scripts --port 3000\" \"yarn serve-dev\"",
    "serve-dev": "serve -p 8000 -c serve.dev.json",
    "serve-dist": "serve dist/ -p 9999 -c ../serve.dist.json",
    "serve-scripts": "dotenv-load node --import=./register.js server/index.ts",
    "test": "jest --verbose",
    "ci": "start-server-and-test \"concurrently 'yarn serve-scripts --port 3000' 'serve spec/ -p 5555' --hide 0,1\" \"localhost:3000/health|localhost:5555\" 'yarn test'",
    "lint": "eslint src/** server/**"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@tsconfig/node20": "^20.1.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/ejs": "^3.1.1",
    "@types/express": "5.0.2",
    "@types/gulp": "^4.0.10",
    "@types/gulp-htmlmin": "^1.3.36",
    "@types/gulp-size": "^4.0.3",
    "@types/gulp-terser": "^1.2.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "dotenv-load": "^3.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "gulp": "^5.0.1",
    "gulp-ejs": "^5.1.0",
    "gulp-env-loader": "^1.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-minify-inline": "^1.1.0",
    "gulp-size": "^5.0.0",
    "gulp-terser": "^2.1.0",
    "jest": "^29.3.1",
    "prettier": "^3.5.3",
    "puppeteer": "24.10.0",
    "serve": "^14.2.4",
    "start-server-and-test": "^2.0.12",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "yargs": "^17.7.2"
  }
}
