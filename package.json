{
  "name": "consent-management-provider",
  "version": "3.2.0",
  "type": "module",
  "description": "A minimal consent manager aiming for compliance to IAB's Transparency and Consent Framework (TCF v2) ",
  "repository": "https://github.com/rbredtech/consent-management-provider",
  "author": "Andreas Jantschnig <andreas.jantschnig@tv-insight.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist/* && gulp",
    "dev": "concurrently \"yarn serve-scripts\" \"yarn serve-dev\"",
    "serve-dev": "serve -p 8000 -c serve.dev.json",
    "serve-dist": "serve dist/ -p 9999 -c ../serve.dist.json",
    "serve-scripts": "dotenv-load node --import=./register.js server/index.ts",
    "test": "jest --verbose=true",
    "ci": "start-server-and-test start http://localhost:3000/health test",
    "lint": "eslint --color"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@tsconfig/node20": "^20.1.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "4.17.21",
    "@types/gulp": "^4.0.10",
    "@types/gulp-htmlmin": "^1.3.36",
    "@types/gulp-size": "^4.0.3",
    "@types/gulp-terser": "^1.2.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "browser-refresh-client": "^1.1.4",
    "concurrently": "^9.0.1",
    "dotenv": "^16.0.3",
    "dotenv-load": "^3.0.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gulp": "^5.0.0",
    "gulp-ejs": "^5.1.0",
    "gulp-env-loader": "^1.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-minify-inline": "^1.1.0",
    "gulp-size": "^5.0.0",
    "gulp-terser": "^2.1.0",
    "jest": "^29.3.1",
    "prettier": "^3.3.3",
    "puppeteer": "24.9.0",
    "serve": "^14.2.4",
    "start-server-and-test": "^2.0.12",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.7.0",
    "wait-for": "^2.1.1",
    "yargs": "^17.6.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
