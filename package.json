{
  "name": "consent-management-provider",
  "version": "4.0.0",
  "type": "module",
  "description": "A minimal consent manager aiming for compliance to IAB's Transparency and Consent Framework (TCF v2) ",
  "repository": "https://github.com/rbredtech/consent-management-provider",
  "author": "Andreas Jantschnig <andreas.jantschnig@tv-insight.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn serve-scripts --port 3000\" \"yarn serve-dev\"",
    "build": "rm -rf ./dist && gulp",
    "serve-dev": "serve -p 822 -c serve.dev.json",
    "serve-dist": "serve dist/ -p 9999 -c ../serve.dist.json",
    "serve-scripts": "dotenv-load node --import=./register.js app.ts",
    "test": "jest --verbose",
    "ci": "start-server-and-test \"concurrently 'yarn serve-scripts --port 3000' 'serve spec/ -p 5555' --hide 0,1\" \"localhost:3000/cmp.js|localhost:5555\" 'yarn test'",
    "lint": "eslint src/**"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.2",
    "@types/gulp": "^4.0.17",
    "@types/gulp-htmlmin": "^1.3.36",
    "@types/gulp-if": "^3.0.4",
    "@types/gulp-rename": "^2.0.6",
    "@types/gulp-size": "^4.0.3",
    "@types/gulp-terser": "^1.2.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/yargs": "^17.0.33",
    "concurrently": "^9.0.1",
    "dotenv-load": "^3.0.0",
    "ejs": "^3.1.10",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^5.1.0",
    "globals": "^16.1.0",
    "gulp": "^5.0.0",
    "gulp-ejs": "^5.1.0",
    "gulp-env-loader": "^1.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-minify-inline": "^1.1.0",
    "gulp-size": "^5.0.0",
    "gulp-terser": "^2.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "puppeteer": "^24.9.0",
    "serve": "^14.2.4",
    "start-server-and-test": "^2.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "yargs": "^17.7.2"
  }
}
